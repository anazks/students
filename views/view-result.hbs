<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Results</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    body {
      background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
      font-family: 'Arial', sans-serif;
    }

    .breadcrumb {
      background-color: transparent;
    }

    .breadcrumb-item a {
      text-decoration: none;
      color: #007bff;
    }

    .breadcrumb-item a:hover {
      text-decoration: underline;
    }

    .view-user {
      background: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 30px;
    }

    h3 {
      font-weight: bold;
      color: #343a40;
    }

    table {
      background: #ffffff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    thead {
      background: #343a40;
      color: #ffffff;
    }

    th,
    td {
      text-align: center;
      vertical-align: middle;
    }

    tbody tr:nth-child(odd) {
      background-color: #f8f9fa;
    }

    tbody tr:nth-child(even) {
      background-color: #ffffff;
    }
  </style>
</head>

<body>
  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb" class="mt-4 ms-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/" class="btn btn-success text-light">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">View Results</li>
    </ol>
  </nav>

  <!-- View User Section -->
  <div class="container view-user mt-4">
    <!-- Dynamic Student Info -->
    {{!-- {{#each rows}} --}}
    <div class="row mb-5">
      <div class="col text-center">
        <h3>{{this.id}} {{this.name}}</h3>
      </div>
    </div>

    <!-- Results Table -->
    <div class="row">
      <div class="col">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">Semester</th>
              <th scope="col">Lab</th>
              <th scope="col">Mark</th>
            </tr>
          </thead>
          <tbody>
            {{#each rows}}
            <tr>
              <td>{{this.semester}}</td>
              <td>{{this.lab}}</td>
              <td>{{this.cgpa}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    {{!-- {{/each}} --}}
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
